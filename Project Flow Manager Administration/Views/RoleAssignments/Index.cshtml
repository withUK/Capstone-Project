@model IEnumerable<Project_Flow_Manager_Models.RoleAssignment>

<a asp-action="Index" asp-controller="Home" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-arrow" asp-action="Create">Create New</a>
</p>

@if (Model.Count() > 0)
{
    <div class="table-responsive col-5">
        <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    </div>
}