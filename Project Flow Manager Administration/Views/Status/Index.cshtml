@model IEnumerable<Project_Flow_Manager_Models.Status>

<a asp-action="Index" asp-controller="Home" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-arrow" asp-action="Create">Create New</a>
</p>

@if(Model.Count() > 0)
{
    <div class="table-responsive col-5">
        <table class="table">
            <tbody>
                @foreach (var item in Model) 
                {
                    <tr>
                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td class="col-2">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}