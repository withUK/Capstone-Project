@model ProjectFlowManagerModels.Comment

@{
    var controller = ViewData["Controller"];
    var submissionId = ViewData["SubmissionId"];
}

<a asp-action="Details" asp-controller="@controller" asp-route-id="@submissionId" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <input hidden id="controllerName" name="controllerName" value="@controller" />
            <input hidden id="submissionId" name="submissionId" value="@submissionId" />
            <div class="form-group">
                <input type="submit" value="Add comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>