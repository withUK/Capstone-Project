@model Project_Flow_Manager_Models.ResourceRequest

<a asp-action="Index" asp-controller="ResourceRequests" class="link-back">Back</a>

<h1>Resourcing</h1>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectAssessmentReportId" class="form-label"></label>
                <input asp-for="ProjectAssessmentReportId" class="form-control" />
                <span asp-validation-for="ProjectAssessmentReportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <fieldset>
                    <label class="form-label" for="full-name">Technologies</label>
                    <legend class="sr-only">Technologies</legend>
                    @foreach(var item in ViewBag.TechnologyOptions)
                    {
                        var itemId = string.Concat("teamChoice", @item);
                        <label class="block-label" for="@itemId" data-target="@itemId">
                        <input type="checkbox" id="@itemId" name="teamChoice" value="@itemId" aria-controls="@itemId" aria-expanded="false">
                            @item
                        </label>
                    }
                </fieldset>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}