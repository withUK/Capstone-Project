@model Project_Flow_Manager_Models.ResourceRequest

<a asp-action="Details" asp-controller="ResourceRequests" asp-route-id="@Model.Id" class="link-back">Back</a>

<h1>Resourcing</h1>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProjectAssessmentReportId" class="form-label"></label>
                <input asp-for="ProjectAssessmentReportId" class="form-control" />
                <span asp-validation-for="ProjectAssessmentReportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>