@model Project_Flow_Manager_Models.TeamResource

@{
    var resourceRequestId = @ViewData["ResourceRequestId"];
}

<a asp-action="Details" asp-controller="ResourceRequests" asp-route-id="@resourceRequestId" class="link-back">Back</a>

<h1>Resourcing</h1>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTeamResource">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Team" class="form-label"></label>
                <input type="hidden" asp-for="Team" value="@Model.Team" />
                @Html.DisplayFor(m => m.Team)
            </div>
            <div class="form-group">
                <label asp-for="Hours" class="form-label"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <input type="hidden" id="resourceRequestId" name="resourceRequestId" value=@ViewData["ResourceRequestId"] />
           <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>