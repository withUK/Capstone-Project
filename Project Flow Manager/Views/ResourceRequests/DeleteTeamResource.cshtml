@model Project_Flow_Manager_Models.TeamResource

@{
    var resourceRequestId = @ViewData["ResourceRequestId"];
}

<a asp-action="Details" asp-controller="ResourceRequests" asp-route-id="@resourceRequestId" class="link-back">Back</a>

<h1>Resourcing</h1>
<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team Resource</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hours)
        </dd>
    </dl>
    
    <form asp-action="DeleteTeamResource">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" id="resourceRequestId" name="resourceRequestId" value=@resourceRequestId />
            <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
