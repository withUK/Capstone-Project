@model IEnumerable<Project_Flow_Manager_Models.Innovation>

<a asp-action="Index" asp-controller="Home" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-arrow" asp-action="Create">Create new</a>
</p>

@if(Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SubmittedDate)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SubmittedBy)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RequiredDate)
                    </th>
                    <th class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmittedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmittedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequiredDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                    @if(!string.Equals(item.Status,"Approved"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div role="note" aria-label="Information" class="text-highlight  text-highlight--blue">
        <p>There are currently no ideas submitted.</p>
    </div>
}