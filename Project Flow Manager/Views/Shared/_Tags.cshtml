@model IEnumerable<Project_Flow_Manager_Models.Tag>

@{
    var subController = ViewData["ControllerName"];
    var subSubmissionId = ViewData["SubmissionId"];
}
<span class="badge badge-light"><a asp-action="Create" asp-controller="Tags" asp-route-submissionId="@subSubmissionId" asp-route-controllerName="@subController"><i class="fa-solid fa-plus"></i></a></span>
@if(Model.Count() > 0)
{
    @foreach(var item in @Model)
    {
        <span class="badge badge-info">@item.Value <a asp-action="Delete" asp-controller="Tags" asp-route-id="@item.Id" asp-route-controller="@subController" asp-route-submissionId="@subSubmissionId"><i class="fa-solid fa-xmark"></i></a></span> 
    }
}