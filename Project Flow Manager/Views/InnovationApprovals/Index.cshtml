@model IEnumerable<Project_Flow_Manager_Models.Innovation>

<a asp-action="Index" asp-controller="Home" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

@if(Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RequiredDate)
                    </th>
                    <th class="col-sm-1"></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td class="col-sm-3">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.RequiredDate)
                    </td>
                    <td class="col-sm-1">
                        <a asp-action="Review" asp-route-id="@item.Id">Review</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
}
else
{
    <div role="note" aria-label="Information" class="text-highlight  text-highlight--blue">
        <p>There are currently no submissions requiring approval.</p>
    </div>
}