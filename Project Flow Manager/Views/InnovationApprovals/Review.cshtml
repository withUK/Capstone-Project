@model Project_Flow_Manager_Models.Innovation

<a asp-action="Index" asp-controller="InnovationApprovals" class="link-back">Back</a>

<h1>Innovation Approvals</h1>
<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessDuration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessDuration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfPeopleIncluded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPeopleIncluded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequiredDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiredDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessSteps)
        </dt>
        <dd></dd>
        @if(Model.ProcessSteps.Count() > 0)
        {
            @foreach(var item in Model.ProcessSteps)
            {
                <div class="row">
                    <dd class = "col-sm-2"></dd>
                    <dd class = "col-sm-10">
                        @string.Concat(item.OrderPosition,". ",item.Value)
                    </dd>
                </div>
            }
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubmittedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubmittedBy)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Approve" asp-route-id="@Model?.Id"><i class="fa-solid fa-check"></i> Approve</a>
    <a class="btn btn-danger" asp-action="Decline" asp-route-id="@Model?.Id"><i class="fa-solid fa-xmark"></i> Decline</a>
</div>
