@model ProjectFlowManagerModels.Approval

<a asp-action="Index" asp-controller="Decisions" class="link-back">Back</a>

<h1>Decisions</h1>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Approve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reason" class="form-label"></label>
                <textarea asp-for="Reason" rows="5" class="form-control-textarea"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <input type="hidden" value=@ViewData["ProjectAssessmentReportId"] id="projectAssessmentReportId" name="ProjectAssessmentReportId" />
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
