@model IEnumerable<ProjectFlowManagerModels.ProjectAssessmentReport>

<a asp-action="Index" asp-controller="Home" class="link-back">Back</a>

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-sm-7">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Recommendations)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="col-sm-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @item.Recommendations.Count()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Review" asp-route-id="@item.Id">Review</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div role="note" aria-label="Information" class="text-highlight  text-highlight--blue">
        <p>There are currently no assessments requiring a decision.</p>
    </div>
}